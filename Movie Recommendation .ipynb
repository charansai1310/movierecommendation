   "source": [
    "C= movies_data['vote_average'].mean()\n",
    "m= movies_data['vote_count'].quantile(0.1)\n",
    "movies_data = movies_data[movies_data['vote_count'] >= m]\n",
    "def weighted_rating(x, m=m, C=C):\n",
    "    v = x['vote_count']\n",
    "    R = x['vote_average']\n",
    "    return (v/(v+m) * R) + (m/(m+v) * C)\n",
    "movies_data['score'] = movies_data.apply(weighted_rating, axis=1)"
   ]
  },
